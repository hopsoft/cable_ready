{
  "name": "cable_ready-repo",
  "version": "4.4.0-pre2",
  "private": true,
  "description": "CableReady helps you create great real-time user experiences by making it simple to trigger client-side DOM changes from server-side Ruby.",
  "homepage": "https://cableready.stimulusreflex.com/",
  "bugs": "https://github.com/hopsoft/cable_ready/issues",
  "repository": "https://github.com/hopsoft/cable_ready",
  "license": "MIT",
  "author": "Nathan Hopkins <natehop@gmail.com>",
  "source": "packages/cable_ready/index.js",
  "main": "packages/cable_ready/dist/cable_ready.js",
  "module": "packages/cable_ready/dist/cable_ready.module.js",
  "esmodule": "packages/cable_ready/dist/cable_ready.modern.js",
  "scripts": {
    "prepare": "yarn build",
    "reset": "yarn clean && lerna clean",
    "clean": "lerna run --parallel clean",
    "build": "lerna run --stream --prefix build",
    "prettier-standard:check": "lerna run --parallel prettier-standard:check",
    "prettier-standard:format": "lerna run --parallel prettier-standard:format",
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run --parallel dev",
    "prerelease": "yarn build",
    "release": "lerna publish",
    "release:beta": "lerna publish --npm-tag=beta"
  },
  "workspaces": [
    "packages/*",
    "packages/@cable_ready/*"
  ],
  "dependencies": {
    "lerna": "^3.22.1"
  }
}
